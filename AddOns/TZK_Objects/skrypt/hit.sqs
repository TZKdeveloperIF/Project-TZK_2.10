;arg [tank]

_tank = _this select 0
_st = getdammage _tank

? (0.2 < _st ) and (_st < 0.5) : goto "1"
? (0.5 < _st ) and (_st < 0.9) : goto "2"
? (0.9 < _st) : goto "3"
exit

#1
